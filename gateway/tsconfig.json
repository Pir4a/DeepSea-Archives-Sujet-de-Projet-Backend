{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@deepsea/common": [
        "../packages/common/dist"
      ],
      "@deepsea/common/*": [
        "../packages/common/dist/*"
      ]
    }
  }
}