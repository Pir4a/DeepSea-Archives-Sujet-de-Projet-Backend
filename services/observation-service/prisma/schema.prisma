// Prisma schema pour observation-service (Species & Observation)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Species {
  id           Int           @id @default(autoincrement())
  authorId     Int
  name         String        @unique
  rarityScore  Float         @default(100)
  createdAt    DateTime      @default(now())
  observations Observation[]
}

model Observation {
  id           Int       @id @default(autoincrement())
  speciesId    Int
  authorId     Int
  description  String
  dangerLevel  Int
  status       ObservationStatus @default(PENDING)
  validatedBy  Int?
  validatedAt  DateTime?
  createdAt    DateTime @default(now())
  deletedAt    DateTime?

  species      Species             @relation(fields: [speciesId], references: [id])
  history      ObservationHistory[]
}

enum ObservationStatus {
  PENDING
  VALIDATED
  REJECTED
}

model ObservationHistory {
  id             Int                      @id @default(autoincrement())
  observationId  Int
  speciesId      Int
  authorId       Int
  action         ObservationHistoryAction
  payload        Json?
  performedBy    Int?
  createdAt      DateTime                 @default(now())

  observation Observation @relation(fields: [observationId], references: [id])
}

enum ObservationHistoryAction {
  CREATED
  VALIDATED
  REJECTED
  DELETED
  RESTORED
}
